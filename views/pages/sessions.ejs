<!-- Loading -->
<div x-show="loading" class="text-center py-12">
    <i class="fa-solid fa-spinner fa-spin text-4xl text-primary-500"></i>
    <p class="mt-4 text-gray-500">Loading sessions...</p>
</div>

<!-- Sessions by Date -->
<template x-for="(dateSessions, date) in filteredByDate" :key="date">
    <section class="mb-8">
        <!-- Date Header -->
        <h2 class="text-lg font-semibold mb-4 flex items-center gap-2 text-gray-700 dark:text-gray-300">
            <i class="fa-regular fa-calendar text-primary-500"></i>
            <span x-text="formatDateHuman(date)"></span>
        </h2>

        <!-- Sessions Grid -->
        <div class="grid gap-4 md:grid-cols-2">
            <template x-for="session in dateSessions" :key="session.id">
                <div x-show="isSessionVisible(session.project, session.summary, session.id, date, session.tool)"
                     class="session-card relative bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-200
                            dark:border-slate-700 hover:shadow-md hover:border-primary-300 dark:hover:border-primary-600
                            transition-all duration-200">

                    <a :href="'/session/' + session.id" class="block p-4">
                        <!-- Session Header -->
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center gap-2 text-xs text-gray-500 dark:text-gray-400">
                                <!-- Tool Badge -->
                                <i class="fa-solid" :class="getToolIcon(session.tool)"></i>
                                <span class="truncate max-w-[120px]" x-text="session.project?.split('/').pop()"></span>
                            </div>
                            <div class="flex items-center gap-3 text-xs text-gray-400">
                                <!-- Tag indicator -->
                                <span class="flex items-center gap-1"
                                      :class="session.tag_count > 0 ? 'text-primary-500' : 'text-gray-300'">
                                    <i class="fa-solid fa-tag"></i>
                                    <span x-show="session.tag_count > 0" x-text="session.tag_count"></span>
                                </span>
                                <!-- Time -->
                                <span class="flex items-center gap-1">
                                    <i class="fa-regular fa-clock"></i>
                                    <span x-text="formatDateTime(session.ended_at || session.started_at)"></span>
                                </span>
                            </div>
                        </div>

                        <!-- Summary -->
                        <h3 class="font-medium text-gray-900 dark:text-gray-100 mb-2 line-clamp-2"
                            x-text="session.summary || 'No summary'"></h3>

                        <!-- Stats -->
                        <div class="flex items-center gap-4 text-xs text-gray-500 dark:text-gray-400">
                            <span>
                                <i class="fa-regular fa-message mr-1"></i>
                                <span x-text="session.message_count"></span> messages
                            </span>
                        </div>
                    </a>
                </div>
            </template>
        </div>
    </section>
</template>

<!-- Empty State -->
<div x-show="!loading && Object.keys(filteredByDate).length === 0"
     class="text-center py-12 text-gray-500 dark:text-gray-400">
    <i class="fa-solid fa-inbox text-4xl mb-4 opacity-50"></i>
    <p>No sessions found</p>
</div>
