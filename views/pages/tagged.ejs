<!-- Tagged Messages Header -->
<div class="mb-6">
    <div class="flex items-center justify-between">
        <h1 class="text-xl font-semibold flex items-center gap-2">
            <i class="fa-solid fa-tags text-primary-500"></i>
            Tagged Messages
        </h1>

        <!-- Tag Filter Pills -->
        <div class="flex items-center gap-1">
            <button @click="filterTag = null"
                    :class="!filterTag ? 'bg-primary-500 text-white' : 'bg-gray-100 dark:bg-slate-700 hover:bg-gray-200'"
                    class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors">
                All
                <span class="text-xs opacity-75" x-text="'(' + taggedMessages.length + ')'"></span>
            </button>
            <template x-for="tag in tags" :key="tag.id">
                <button @click="filterTag = tag.id"
                        :class="filterTag === tag.id ? 'bg-primary-500 text-white' : 'bg-gray-100 dark:bg-slate-700 hover:bg-gray-200'"
                        class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors">
                    <span x-text="tag.label"></span>
                    <span class="text-xs opacity-75" x-text="'(' + getTagMessageCount(tag.id) + ')'"></span>
                </button>
            </template>
        </div>
    </div>
</div>

<!-- Loading -->
<div x-show="loadingTagged" class="text-center py-12">
    <i class="fa-solid fa-spinner fa-spin text-4xl text-primary-500"></i>
    <p class="mt-4 text-gray-500">Loading messages...</p>
</div>

<!-- Messages List -->
<div x-show="!loadingTagged" class="space-y-4">
    <template x-for="msg in filteredTaggedMessages" :key="msg.message_id + '-' + msg.tag">
        <a :href="'/session/' + msg.session_id + '#msg-' + msg.message_id"
           class="block bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-200
                  dark:border-slate-700 hover:shadow-md hover:border-primary-300 dark:hover:border-primary-600
                  transition-all duration-200 overflow-hidden">

            <!-- Message Header -->
            <div class="px-4 py-2 bg-gray-50 dark:bg-slate-700/50 border-b border-gray-100 dark:border-slate-700
                        flex items-center justify-between">
                <div class="flex items-center gap-3 text-sm">
                    <!-- Tool icon -->
                    <i class="fa-solid" :class="getToolIcon(msg.tool)"></i>
                    <!-- Project -->
                    <span class="text-gray-600 dark:text-gray-300 truncate max-w-[200px]"
                          x-text="msg.project?.split('/').pop()"></span>
                    <!-- Session summary -->
                    <span class="text-gray-400 dark:text-gray-500 truncate max-w-[300px] hidden sm:inline"
                          x-text="msg.session_summary"></span>
                </div>
                <div class="flex items-center gap-2">
                    <!-- Tag badge -->
                    <span class="px-2 py-0.5 bg-primary-100 dark:bg-primary-900/50 text-primary-700 dark:text-primary-300
                                 text-xs font-medium rounded"
                          x-text="getTagLabel(msg.tag)"></span>
                    <!-- Date -->
                    <span class="text-xs text-gray-400" x-text="formatDate(msg.session_date)"></span>
                </div>
            </div>

            <!-- Message Preview -->
            <div class="px-4 py-3">
                <div :class="msg.type === 'user' ? 'text-primary-700 dark:text-primary-300' : ''"
                     class="text-sm whitespace-pre-wrap line-clamp-3" x-text="msg.preview"></div>
            </div>

            <!-- Message Type indicator -->
            <div class="px-4 py-2 border-t border-gray-100 dark:border-slate-700 flex items-center gap-2 text-xs text-gray-400">
                <template x-if="msg.type === 'user'">
                    <span><i class="fa-solid fa-user mr-1"></i>You</span>
                </template>
                <template x-if="msg.type !== 'user'">
                    <span><i class="fa-solid fa-robot mr-1"></i>Assistant</span>
                </template>
                <span class="ml-auto">
                    <i class="fa-solid fa-arrow-right mr-1"></i>View in session
                </span>
            </div>
        </a>
    </template>
</div>

<!-- Empty State -->
<div x-show="!loadingTagged && filteredTaggedMessages.length === 0"
     class="text-center py-12 text-gray-500 dark:text-gray-400">
    <i class="fa-solid fa-tags text-4xl mb-4 opacity-50"></i>
    <p>No tagged messages found</p>
    <p class="text-sm mt-2">Tag messages in session view to see them here</p>
</div>
